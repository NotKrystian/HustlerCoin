}

contract VaultOwned is Ownable {
  
  address internal _vault;

  event VaultTransferred(address indexed newVault);

  function setVault( address vault_ ) external onlyOwner() {
    require(vault_ != address(0), "IA0");
    _vault = vault_;
    emit VaultTransferred( _vault );
  }

  function vault() public view returns (address) {
    return _vault;
  }

  modifier onlyVault() {
    require( _vault == msg.sender, "VaultOwned: caller is not the Vault" );
    _;
  }

}

contract BondOwned is Ownable {
  
  address internal _bond;
  mapping(address => uint256) public bondContract;

  event BondAdded(address indexed newBond);
  event BondRemoved(address indexed removedBond);

  function addBond( address bond_ ) external onlyOwner() {
    require(bond_ != address(0), "IA0");
    bondContract[bond_] = 1;
    emit BondAdded( _bond );
  }

  function removeBond( address bond_ ) external onlyOwner() {
    require(bond_ != address(0), "IA0");
    bondContract[bond_] = 0;
    emit BondRemoved( _bond );
  }

  function bondEnquiry(address bondCheck) public view returns (uint256) {
    return bondContract[bondCheck];
  }

  modifier onlyBonds() {
    require( bondContract[msg.sender] == 1 , "BondOwned: caller is not a Bond Contract" );
    _;
  }

}


pragma solidity ^0.8.0;


contract HustlerTreasury is Ownable, VaultOwned, BondOwned {
    using SafeMath for uint256;
    using Address for address;
    using Strings for uint256;

    mapping(address => bool) whiteList;
    mapping(address => uint256) public contributions;
    mapping(address => uint256) public startStake;
    mapping(address => bool) public query;
    
    address public HustlerToken;
    address public stakedHustlerToken;
    address public stakingContract;
    bool public mintingActive = false;

    constructor (
        address _HustlerToken,
        address _stakedHustlerToken,
        address _stakingContract
    ) {
        require(_HustlerToken != address(0), "IA0");
        require(_stakedHustlerToken != address(0), "IA0");
        require(_stakingContract != address(0), "IA0");
        HustlerToken = _HustlerToken;
        stakedHustlerToken = _stakedHustlerToken;
        stakingContract = _stakingContract;
    }

    function bondHustler(uint256 deposit, address token, uint256 rate) public onlyBonds() {  //deposit tokens from bond to treasury and mint rewards (USE THIS FOR WETH)
        if(mintingActive) {
            require(deposit > 0, "Deposit is less than 0");
            require(token != stakedHustlerToken, "Token is a Hustler Token");
            require(token != HustlerToken, "Token is a Hustler Token");
            require(token != address(0), "Token is the zero address");
            uint256 amount = deposit * rate;
            require(amount > 0, "Amount is less than 0");
            IMINT20(HustlerToken).treasuryMint(msg.sender, amount);
            IERC20(token).transferFrom(msg.sender, address(this), deposit);
        }
        else {
            revert("Bonding/Minting not active");
        }
    }

    function bondHustlerETH(uint256 rate) public payable onlyBonds() {  //deposit ETH from bond to treasury and mint rewards (USE THIS FOR ETH)
        if(mintingActive) {
            require(msg.value > 0, "Deposit is less than 0");
            require(msg.value * rate > 0, "Amount is less than 0");
            uint256 amount = msg.value * rate;
            IMINT20(HustlerToken).treasuryMint(msg.sender, amount);
        }
        else {
            revert("Bonding/Minting not active");
        }
    }

    function mintingStatus() public view returns (bool) {
        return mintingActive;
    }

    function toggleMinting(bool value) public onlyOwner() {
        mintingActive = value;
    }

    function setHustlerToken(address value) public onlyOwner() {
        HustlerToken = value;
    }

    function setStakedHustlerToken(address value) public onlyOwner() {
        stakedHustlerToken = value;
    }

    function setStakingContract(address value) public onlyOwner() {
        stakingContract = value;
    }

    function toggleQuery(address value) public onlyOwner() {
        query[value] = !query[value];
    }

    function withdrawETH(address userAddress, uint256 value) public onlyVault() {
        require(value > 0, "You need to withdraw at least some ETH");
        require(value <= address(this).balance, "Transaction over ETH balance");
        payable(userAddress).transfer(value);
    }

    function withdrawAllETH() public onlyVault() {
        uint256 value = address(this).balance;
        payable(msg.sender).transfer(value);
    }
    
    function withdrawTokens(address userAddress, uint256 value, address token) public onlyVault() {
        require(value > 0, "You need to withdraw at least some tokens");
        require(value <= IERC20(token).balanceOf(address(this)), "Transaction over token balance");
        IERC20(token).transferFrom(address(this), userAddress, value);
    }

    function withdrawAllTokens(address token) public onlyVault() {
        uint256 value = IERC20(token).balanceOf(address(this));
        IERC20(token).transferFrom(address(this), msg.sender, value);
    }

    function mintFromTreasury(uint256 amount, address user) public {
        require(query[msg.sender], "You are not approved for this function");
        IMINT20(HustlerToken).treasuryMint(user, amount);
    }
    
    function transferFromTreasury(address user, address token, uint256 amount) public {
        require(query[msg.sender], "You are not approved for this function");
        IERC20(token).transferFrom(address(this), user, amount);
    }

}